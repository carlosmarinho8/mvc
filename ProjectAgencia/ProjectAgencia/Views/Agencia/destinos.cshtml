@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Destinos</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel="stylesheet" href="~/bootstrap.css">
    <style>
        font-face {
	font-family: 'Viagens';
	src: url(RNS_Camelia.otf);
}
* {
	padding: 0;
	margin: 0;
	text-decoration: none;
	list-style: none;
	box-sizing: border-box;
}

        body {
            font-family: montserrat;
            background-image: url("https://p4.wallpaperbetter.com/wallpaper/422/981/158/beautiful-sunset-wallpaper-preview.jpg");
            background-position: top;
            background-repeat: no-repeat;
            background-size: cover;
        }
nav
{
	background: orangered;
	height: 80px;
	width: 100%;
}
#Formulario div
{
    background-image:linear-gradient(yellow, orangered);
    position: relative;
    width: 22%;
    height: 500px;
    margin-left: 37%;
    margin-top: 10%;
    border: darkgreen 1px solid;
    border-radius: 10px 90px;
}
#Formulario h1
{
    text-align: center;
    margin-bottom: 16.90%;
    margin-top: 6%;
}
#Formulario input
{
    outline: none;
    border: solid black 1px;
    display: list-item;
    margin-top: 25px;
    text-align: center;
    margin-left: 30.50%;
    width: 40%;
    height: 6%;
}
#Formulario input:hover
{
    height: 7%;
    transition: 1s;
}
#Formulario select
{
    outline: none;
    border: solid black 1px;
    display: list-item;
    margin-top: 25px;
    text-align: center;
    margin-left: 30.50%;
    width: 40%;
    height: 6%;
}
button
{
    width: 100px;
    height: 30px;
    margin-top: 40px;
    margin-left: 38%;
}
label.logo {
    text-decoration: underline;
	color: white;
	font-size: 35px;
	line-height: 80px;
	padding: 0 100px;
	font-weight: bold;
}
nav ul {
	float: right;
	margin-right: 20px;
}
nav ul li {
	display: inline-block;
	line-height: 80px;
	margin: 0 5px;
}
nav ul li a {
	color: black;
	font-size: 17px;
	padding: 7px 13px;
	border-radius: 3px;
	text-transform: uppercase;
}
a.active, a:hover {
	background: aliceblue;
	transition: .5s;
}
select{
    width: 200px;
    height: 30px;
    margin-top: 50px;
    margin-left: 25%;
}

    </style>
</head>
<body>
    <header>
        <nav>
            <label class="logo">Agência Sem Fronteiras</label>
            <ul>
                <li>@Html.ActionLink("Home", "index", "Agencia")</li>
                <li>@Html.ActionLink("Destinos", "destinos", "Agencia")</li>
                <li>@Html.ActionLink("Promoções", "promocoes", "Agencia")</li>
                <li>@Html.ActionLink("Contato", "contato", "Agencia")</li>
            </ul>
        </nav>
    </header>
    <section id="Formulario">
        <div>
            <h1>Selecione o seu destino.</h1>
            <input type="text" placeholder="Nome Completo">
            <input type="tel" placeholder="Número de telefone">
            <input type="CPF" placeholder="Insira seu CPF">
            <select name="estados-brasil">
                <option value="Select">Selecione um estado</option>
                <option value="AC">Acre</option>
                <option value="AL">Alagoas</option>
                <option value="AP">Amapá</option>
                <option value="AM">Amazonas</option>
                <option value="BA">Bahia</option>
                <option value="CE">Ceará</option>
                <option value="DF">Distrito Federal</option>
                <option value="ES">Espírito Santo</option>
                <option value="GO">Goiás</option>
                <option value="MA">Maranhão</option>
                <option value="MT">Mato Grosso</option>
                <option value="MS">Mato Grosso do Sul</option>
                <option value="MG">Minas Gerais</option>
                <option value="PA">Pará</option>
                <option value="PB">Paraíba</option>
                <option value="PR">Paraná</option>
                <option value="PE">Pernambuco</option>
                <option value="PI">Piauí</option>
                <option value="RJ">Rio de Janeiro</option>
                <option value="RN">Rio Grande do Norte</option>
                <option value="RS">Rio Grande do Sul</option>
                <option value="RO">Rondônia</option>
                <option value="RR">Roraima</option>
                <option value="SC">Santa Catarina</option>
                <option value="SP">São Paulo</option>
                <option value="SE">Sergipe</option>
                <option value="TO">Tocantins</option>
            </select>
            <button>
                Enviar!
            </button>
        </div>
    </section>
</body>
</html>